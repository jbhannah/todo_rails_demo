= form_for todo, as: "todo_#{todo.id}", remote: true, html: { class: 'edit_todo_from_index' } do |f|
  = f.check_box :completed
  = f.label :completed, todo.name
  - if can? :destroy, todo
    = "(#{todo.user})"
    = link_to 'Edit', edit_todo_path(todo)
    = link_to 'Destroy', todo, :method => :delete, :data => { :confirm => 'Are you sure?' }
