<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "large-6 large-centered columns" }) do |f| %>
  <fieldset>
    <legend>Sign In</legend>
    <div><%= f.email_field :email, autofocus: true %></div>

    <div><%= f.password_field :password, autocomplete: "off" %></div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Log in" %></div>

    <%= render "devise/shared/links" %>
  </fieldset>
<% end %>

